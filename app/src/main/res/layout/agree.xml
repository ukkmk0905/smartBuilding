    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제1조 (개인정보 수집 항목 및 방법)"
