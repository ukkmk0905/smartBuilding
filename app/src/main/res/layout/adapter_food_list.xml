<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:elevation="1dp"
    android:background="@drawable/recycle_rect">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:id="@+id/foodImage"
        android:src="@drawable/food"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <com.team.smart.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/tx_comp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="육삼냉면"
                android:textColor="#000"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.4dp"
                android:text="★"
                android:textColor="#ffa800"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tx_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="13.4dp"
                android:text="4.7"
                android:textColor="#000"
                android:textSize="9sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="13.4dp"
                android:text="최근리뷰 "
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tx_reviewCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="13.4dp"
                android:text="100+"
                android:textSize="9sp" />
        </LinearLayout>

        <com.team.smart.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/tx_comp_coment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="돼지김치짜글이세트, 돼지짜글이세트"
            android:textColor="#A2A2A2"
            android:textSize="12dp" />

    </LinearLayout>
</LinearLayout>